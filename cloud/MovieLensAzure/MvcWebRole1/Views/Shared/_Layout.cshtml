<!DOCTYPE html />
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>MovieLens Film Ratings</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li id="tab_index">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="tab_users">@Html.ActionLink("Users", "Users", "Home")</li>
                    <li id="tab_movies">@Html.ActionLink("Movies", "Movies", "Home")</li>
                    <li id="tab_genres">@Html.ActionLink("Genres", "Genres", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
